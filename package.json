{
  "name": "chromakit-react",
  "version": "0.1.15",
  "type": "module",
  "description": "A modern React color picker library with support for OKLCH, OKLAB, and traditional color spaces",
  "license": "MIT",
  "main": "./dist/chromakit.umd.js",
  "module": "./dist/chromakit.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/chromakit.es.js",
      "require": "./dist/chromakit.umd.js"
    },
    "./chromakit.css": "./dist/chromakit.css",
    "./dist/chromakit.css": "./dist/chromakit.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "og-image.png"
  ],
  "sideEffects": [
    "*.css",
    "**/*.css"
  ],
  "keywords": [
    "react",
    "color-picker",
    "colorpicker",
    "oklch",
    "oklab",
    "color",
    "color-space",
    "color-conversion",
    "typescript",
    "accessible",
    "accessibility",
    "a11y",
    "wai-aria",
    "aria",
    "react-component",
    "hex",
    "rgb",
    "hsl",
    "hsv",
    "picker",
    "react-color",
    "react-colorful",
    "modern",
    "perceptually-uniform"
  ],
  "author": "Garrett Siegel",
  "repository": {
    "type": "git",
    "url": "https://github.com/garrettsiegel/chromakit"
  },
  "homepage": "https://www.chromakit.site",
  "bugs": {
    "url": "https://github.com/garrettsiegel/chromakit/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/garrettsiegel"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:types",
    "build:site": "vite build",
    "build:lib": "vite build --mode lib",
    "build:types": "tsc --project tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "preview": "vite preview",
    "check": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run --coverage",
    "test:coverage": "vitest --coverage",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "size": "size-limit",
    "size:why": "size-limit --why",
    "ci": "npm run type-check && npm run lint && npm run test:ci && npm run build && npm run size"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.8",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@size-limit/preset-small-lib": "^12.0.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.90.20",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "embla-carousel-react": "^8.6.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "input-otp": "^1.4.2",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.4.0",
    "lucide-react": "^0.563.0",
    "next-themes": "^0.4.6",
    "postcss": "^8.4.47",
    "prettier": "^3.8.1",
    "react": "^19.2.4",
    "react-day-picker": "^9.13.0",
    "react-dom": "^19.2.4",
    "react-hook-form": "^7.71.1",
    "react-resizable-panels": "^4.5.4",
    "recharts": "^3.7.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "size-limit": "^12.0.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "vaul": "^1.1.2",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wouter": "^3.9.0"
  },
  "size-limit": [
    {
      "name": "ES Module (gzip)",
      "path": "dist/chromakit.es.js",
      "limit": "12 KB",
      "gzip": true
    },
    {
      "name": "UMD Module (gzip)",
      "path": "dist/chromakit.umd.js",
      "limit": "10 KB",
      "gzip": true
    },
    {
      "name": "CSS (gzip)",
      "path": "dist/chromakit.css",
      "limit": "3 KB",
      "gzip": true
    }
  ]
}
