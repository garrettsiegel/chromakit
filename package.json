{
  "name": "chromakit",
  "version": "0.1.0",
  "type": "module",
  "description": "A modern React color picker library with support for OKLCH, OKLAB, and traditional color spaces",
  "license": "MIT",
  "main": "./dist/chromakit.umd.js",
  "module": "./dist/chromakit.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/chromakit.es.js",
      "require": "./dist/chromakit.umd.js"
    },
    "./styles.css": "./dist/chromakit.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "*.css"
  ],
  "keywords": [
    "react",
    "color-picker",
    "oklch",
    "oklab",
    "color",
    "color-space",
    "color-conversion",
    "typescript"
  ],
  "author": "Garrett Siegel",
  "repository": {
    "type": "git",
    "url": "https://github.com/garrettsiegel/chromakit"
  },
  "homepage": "https://github.com/garrettsiegel/chromakit#readme",
  "bugs": {
    "url": "https://github.com/garrettsiegel/chromakit/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:lib && npm run build:types",
    "build:lib": "vite build --mode lib",
    "build:types": "tsc --project tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "preview": "vite preview",
    "check": "tsc",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@radix-ui/react-slot": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.453.0",
    "tailwind-merge": "^2.6.0",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.8",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.90.20",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "20.19.27",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.20",
    "cmdk": "^1.1.1",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "jsdom": "^25.0.1",
    "next-themes": "^0.4.6",
    "postcss": "^8.4.47",
    "react": "^18.3.1",
    "react-day-picker": "^9.13.0",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.71.1",
    "react-resizable-panels": "^4.5.2",
    "recharts": "^3.7.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.6.3",
    "vaul": "^1.1.2",
    "vite": "^7.3.0",
    "vitest": "^4.0.18",
    "wouter": "^3.9.0"
  }
}
